<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teacherapp.AddClass" >

    <TextView
        android:id="@+id/welcomeclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:text="Class Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/classname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/welcomeclass"
        android:layout_below="@+id/welcomeclass"
        android:layout_marginTop="62dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/addClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/classname"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dp"
        android:text="Add" 
        android:onClick="addClass"/>

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addClass"
        android:layout_alignBottom="@+id/addClass"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:text="Finish" 
        android:onClick="finish"/>
    
    </RelativeLayout>
